{
    "features": {
        "mousekey": false,
    },
    "rgb_matrix": {
        "default": {
            "animation": "solid_reactive_backlight",
        },
        "animations": {
            // turn off all the effects that Q1 turns on by default
            "band_spiral_val": false,
            "breathing": false,
            "cycle_all": false,
            "cycle_left_right": false,
            "cycle_out_in": false,
            "cycle_out_in_dual": false,
            "cycle_pinwheel": false,
            "cycle_spiral": false,
            "cycle_up_down": false,
            "digital_rain": false,
            "dual_beacon": false,
            "jellybean_raindrops": false,
            "pixel_rain": false,
            "rainbow_beacon": false,
            "rainbow_moving_chevron": false,
            "solid_reactive_multinexus": false,
            "solid_reactive_multiwide": false,
            "solid_splash": false,
            "splash": false,
            "typing_heatmap": false,

            // enable only 3 simple effects
            "solid_reactive_simple": true,
            "solid_color": true,
            "solid_reactive_backlight": true
        },
        "timeout": 300000  // 5 min
    }
}